<form method="post" action="{{ path('ideia_delete', {'id': ideias.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ideias.id) }}">
    <button class="btn" id="btn-delete" >Delete</button>
</form>
